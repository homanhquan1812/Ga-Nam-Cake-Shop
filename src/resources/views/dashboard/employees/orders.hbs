        {{#if styles}}
            {{#each styles}}
                <link rel="stylesheet" href="{{this}}">
            {{/each}}
        {{/if}}

        <!-- Header -->
        <header class="p-3 bg-dark text-white">
            <div class="header-container">
                <div class="search-box">
                    <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                        <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
                    </form>
                </div>

                <div class="title" style="padding-left: 50px;">
                    <h1>ORDERS</h1>
                </div>
                <!--
                <div class="text-end">
                    <button type="button" class="btn btn-outline-light me-2">Login</button>
                    <button type="button" class="btn btn-warning">Sign-up</button>
                </div>
                -->

                <div class="right">
                    <div class="top">
                        <div class="profile">
                            <div class="info">
                                <p style="color: white;">Welcome back, <b style="color: yellow;">Quan</b>.</p>
                                <p style="color: white;">Position: <b style="color: cyan;">Employee</b></p>
                            </div>                                <div class="profile-photo">
                                <img src="../../img/avatar.jpg">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    
        <!-- Content -->
        <div class="container">
            <aside>
                <div class="top">
                    <div class="logo">
                        <img src="../../img/logo.png">
                    </div>
                    <div class="close">
                        <span class="material-icons-sharp">close</span>
                    </div>
                </div>
                <div class="sidebar" id="sidebar">
                    <a href="/employees/overview">
                        <span class="material-symbols-outlined"> overview </span>
                        <h3>Overview</h3>
                    </a>
                    <a href="/employees/dashboard">
                        <span class="material-icons-sharp">grid_view</span>
                        <h3>Dashboard</h3>
                    </a>
                    <a href="/employees/orders" class="active">
                        <span class="material-symbols-outlined"> list_alt </span>
                        <h3>New Orders</h3>
                    </a>
                    <a href="/employees/notes">
                        <span class="material-symbols-outlined"> format_list_bulleted_add </span>
                        <h3>To-Do Lists</h3>
                        <!--
                        <span class="message-count">23</span>
                        -->
                    </a>
                    <a href="/employees/products">
                        <span class="material-icons-sharp">inventory</span>
                        <h3>Products</h3>
                    </a>
                    <a href="/employees/settings">
                        <span class="material-icons-sharp">settings</span>
                        <h3>Settings</h3>
                    </a>
                </div>
            </aside>

            <main id="dynamic-content">
                <!--
                <div class="date">
                    <input type="date">
                </div>
                -->

                <div class="mt-4">
                    <div class="insights">
                        <div class="sales">
                            <!--
                            <div class="middle">
                                <div class="left">
                                    <button type="button" class="btn btn-primary">Add more members</button>
                                </div>
                            </div>
                            -->
                            <table style="margin-top: 20px;">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Customer</th>
                                        <th>Phone number</th>
                                        <th>Address</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Total cost</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each orders}}
                                    <tr>
                                        <td>{{sum @index 1}}</td>
                                        <td>{{this.customer}}</td>
                                        <td>{{this.phonenumber}}</td>
                                        <td>{{this.address}}</td>
                                        <td>
                                            {{#each this.products}}
                                                {{this.name}}
                                                {{#unless @last}}<br><hr> {{/unless}}
                                            {{/each}}
                                        </td>
                                        <td>
                                            {{#each this.products}}
                                                {{this.quantity}}
                                                {{#unless @last}}<br><hr> {{/unless}}
                                            {{/each}}
                                        </td>
                                        <td>{{this.totalcost}} VND</td>
                                        <td>
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-course-modal">Finish delivering</button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                    <tr></tr>
                                </tbody>
                            </table>
                        <!--
                        <div class="showall">
                            <a href="#">Show All</a>
                        </div>
                        -->
                        </div>
                </div>
            </main>

            <form method="POST" name="delete-course-form"></form>

            <div id="delete-course-modal" class="modal" tabindex="-1" role="dialog"  style="font-size: 15px;">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" style="font-size: 15px!important;">Delete Confirmation</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure that you've already delivered cakes to this customer?</p>
                    </div>
                    <div class="modal-footer">
                        <button id="btn-delete-course" type="button" class="btn btn-primary">Yes</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                    </div>
                    </div>
                </div>
            </div>
            
            <div class="right">
                <div class="top">
                </div>

            </div>
        </div>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

        <script>
            document.addEventListener('DOMContentLoaded', function() {
            var courseID
            var deleteForm = document.forms['delete-course-form']
            var btnDeleteCourse = document.getElementById('btn-delete-course')
            var saveInfoBtn = $('#saveInfoBtn')

            $('#delete-course-modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget)
                courseID = button.data('id') 
            })

            btnDeleteCourse.onclick = function()
            {
                deleteForm.action = '/employees/customers/' + courseID + '?_method=DELETE'
                deleteForm.submit()
            }
        })
        </script>

        