<!-- HEADER  -->
  <header class="contact_header">
    <nav class="navbar navbar-expand-lg navbarGaNam">
        <div class="container header__content">
            <img style="width: 50px; height: 50px; margin-right: 20px;" src="../../img/logo.png">
            <a class="navbar-brand logo" href="home">GÀ NẤM</a> 
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#GaNamNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse navigation" id="GaNamNav">
                <ul style="font-size: 20px;" class="navbar-nav ms-auto ">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="../home">HOME</a>
                    </li>
                    <!--
                    <li class="nav-item">
                        <a class="nav-link" href="about">ABOUT</a>
                    </li>
                    -->
                    <li class="nav-item">
                        <a class="nav-link" href="../gallery">MENU</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../contact">CONTACT</a>
                    </li>
                    {{#if isLoggedIn}}
                    <li class="nav-item">
                        <a class="nav-link" href="../history">HISTORY</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">{{csw_name}}</a>
                    </li>
                    <li class="nav-item">
                        <a href="../shoppingcart">
                          <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                      </i>
                    </li>
                    <li class="nav-item">
                      <button class="btnLogin-popup" onclick="window.location.href='../logout'">LOGOUT</button>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <button class="btnLogin-popup" onclick="window.location.href='../login'">LOGIN</button>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="flex-box">
        <div class="left">
            <div class="big-img">
                <img src="{{info.photo}}">
            </div>
            <div class="images">
            </div>
        </div>

        <div class="right">
            <div class="pname">{{info.csw_products}}</div>
            <div class="ratings">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
            </div>
            <div class="price">{{info.price}} VND</div>
            <div class="right product-details">
                <p>{{info.description}}</p>
            </div>
    
            <div class="btn-box" style="margin-bottom: 10px;">
                <form action="/shoppingcart/addToCart2" method="POST" style="display: inline-block;">
                    <p>Quantity:
                        <input type="number" name="quantityInput" min="1" max="99" value="1" required>
                        <input type="hidden" name="id" value="{{info._id}}">
                    </p>
                    <button class="buy-btn">Buy Now</button>
                </form>
                <form class="addToCartForm" action="/shoppingcart/addToCart3" method="POST" style="display: inline-block;">
                    <input type="hidden" name="id" value="{{info._id}}">
                    <button class="cart-btn">Add 1 to Cart</button>
                </form>
            </div>
        </div>
    </div>

    <h2>Other products</h2>

<div class="mt-4">
    <div class="row">
        {{#each otherProducts}}
        <div class="col">
            <div class="card card-course-item" style="width: 11rem; height: 300px; margin: 0 0 20px 10px;">
                <img class="card-img-top" style="width: 100%; height: 100px;" src="{{this.photo}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.csw_products}}</h5>
                    <!--
                    <p class="card-text" style="font-size: 12px; height: 80px; overflow: hidden">{{this.description}}</p>
                    -->
                    <div style="position: absolute; bottom: 65px; left: 0; right: 0; text-align: center;">
                        <p class="card-text"><b>{{this.price}} VND</b></p>
                    </div>
                    <a href="/product_details/{{this._id}}" class="btn btn-primary" style="position: absolute; bottom: 20px; left: 10px; right: 10px;">More Details</a>
                </div>  
            </div>
        </div>

        {{/each}}
    </div>
</div>